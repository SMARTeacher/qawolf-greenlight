/**
 * ESLint config files allow comments, so please comment all changes you make here.
 * Unless you are changing a rule for reasons very specific to this project, you
 * should consider making the change in our @qawolf base config instead. There is
 * also a `.eslintrc.json` file in this repo root folder for any rules that we want
 * in this repo but not necessarily in other repos that use our @qawolf base config.
 */
{
  "root": true,
  "rules": {
    "no-restricted-imports": [
      "error",
      {
        // playground-* and runner-* packages are only to be
        // imported by playgrounds and runners and their packages
        "patterns": ["@qawolf/playground-*", "@qawolf/runner-*"]
      }
    ]
  },
  "extends": [
    "@qawolf",
    "plugin:react/recommended",
    "plugin:react-hooks/recommended",
    "../../.eslintrc.json"
  ],
  "ignorePatterns": ["!**/*", "/**/*.js", "/**/*.d.ts", "dist", "node_modules"]
}
